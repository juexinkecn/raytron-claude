# .env.example - 环境变量模板

# 网站语言 (en 或 zh-CN)
NEXT_PUBLIC_LOCALE=en

# 网站完整URL - 必须包含https://和完整域名
# 英文站使用: https://en.raytron.group
# 中文站使用: https://cn.raytron.group
NEXT_PUBLIC_SITE_URL=https://en.raytron.group

# Sitemap生成使用
SITE_URL=https://en.raytron.group

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# 联系表单API密钥
CONTACT_FORM_API_KEY=your-api-key-here

# SendGrid (邮件服务)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@raytron.group
SENDGRID_TO_EMAIL=sales@raytron.group

# HubSpot (CRM集成)
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-portal-id

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
